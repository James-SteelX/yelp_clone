<% if @restaurant.any? %>
  <% @restaurant.each do |restaurant| %>
    <div>
      <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
      <h3><%= restaurant.description %> </h3>
      <h3><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></h3>
      <h3><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></h3>
      <% if user_signed_in? && !current_user.has_reviewed?(restaurant) %>
        <h3><%= link_to 'Review', new_restaurant_review_path(restaurant.id) %><h3>
      <% elsif !user_signed_in? %>
        <h3><%= link_to 'Sign in and review', new_restaurant_review_path(restaurant.id) %></h3>
      <% else %>
        <h3>You have already reviewed this restaurant</h3>
      <% end %>
    </div>
  <% end %>
<% else %>
  <h1>No restaurants yet</h1>
<% end %>

<a href="/restaurants/new">Add a restaurant</a>
